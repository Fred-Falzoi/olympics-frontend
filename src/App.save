/* Palette de couleurs */
:root {
  --blue-olympic: #0081C8;
  --red-dynamic: #EE334E;
  --yellow-gold: #FFD700;
  --green-olympic: #34A853;
  --white-background: #FFFFFF;
  --dark-text: #333333;
}

/* Styles globaux */
body {
  font-family: 'Roboto', sans-serif;
  background-color: var(--white-background);
  margin: 0;
  padding: 0;
  color: var(--dark-text);
}

h1, h2, h3 {
  font-family: 'Montserrat', sans-serif;
  color: var(--blue-olympic);
  text-align: center;
  margin-top: 20px;
}

/* Header */
header {
  background-color: var(--blue-olympic);
  padding: 20px;
  text-align: center;
}

header nav ul {
  list-style: none;
  padding: 0;
}

header nav ul li {
  display: inline-block;
  margin-right: 20px;
}

header nav ul li a {
  color: var(--white-background);
  text-decoration: none;
  font-weight: bold;
  font-size: 18px;
}

header nav ul li a:hover {
  color: var(--yellow-gold);
}

/* Contenu */
.container {
  max-width: 1000px;
  margin: 0 auto;
  padding: 20px;
  text-align: center;
}

/* Boutons */
button {
  background-color: var(--red-dynamic);
  color: var(--white-background);
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
}

button:hover {
  background-color: var(--yellow-gold);
}

/* Sections */
section {
  margin: 40px 0;
  background-color: #f4f4f4;
  padding: 20px;
  border-radius: 10px;
}

/* Images */
img {
  max-width: 100%;  /* Limite la largeur à 100% de son conteneur */
  height: auto;     /* Conserve le ratio de l'image */
  border-radius: 10px; /* Ajoute un léger arrondi */
}

